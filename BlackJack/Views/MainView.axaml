<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:viewModels="clr-namespace:BlackJack.ViewModel;assembly=BlackJack"
			 xmlns:views="clr-namespace:BlackJack.Views;assembly=BlackJack"
			 Background="Beige"
             x:Class="BlackJack.Views.MainView">
	
	<Design.DataContext>
		<viewModels:MainViewModel />
	</Design.DataContext>
	
	<Grid RowDefinitions="Auto, *">
		<ContentControl Grid.Row="1" Content="{Binding CurrentPage}"/>
		
		
		<Button Grid.Column="0" Classes="transparent" HorizontalAlignment="Right" Command="{Binding ChangeViewCommand}">
			<Label Classes="Icon" Foreground="ForestGreen" FontSize="25" Content="{Binding Test}"/>
		</Button>
	</Grid>
</UserControl>
