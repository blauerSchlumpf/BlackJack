<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        xmlns:local="clr-namespace:BlackJack"
		xmlns:views="clr-namespace:BlackJack.Views"
        x:Class="BlackJack.MainWindow"
        Title="BlackJack">
	
  <Grid RowDefinitions="Auto, *, *">
    <StackPanel Grid.Row="0" Background="AliceBlue">
      <Button Classes="transparent" HorizontalAlignment="Right" Click="OpenSettings">
        <Label Classes="IconFill" Foreground="ForestGreen" FontSize="25">&#xe270;</Label>
      </Button>
    </StackPanel>
    <StackPanel Grid.Row="1" Background="Aqua">
		  <Button Background="Green" Click="Button_Click_1"></Button>
    </StackPanel>
    <StackPanel Grid.Row="2" Background="BlueViolet">
		  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
          <Button Content="Hit" Click="Button_Click_1" Width="150" Height="40" />
          <Button Content="Stand" Click="Button_Click_2" Width="150" Height="40" />
        </StackPanel>
			  <StackPanel x:Name="CardContainer" Orientation="Horizontal" Margin="10" />
	    </StackPanel>
    </StackPanel>
  </Grid>
</Window>